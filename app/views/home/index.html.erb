<h1 class="my-3">Galpões</h1>
<div class="my-3">
  <%= link_to 'Cadastrar Galpão', new_warehouse_path %>
</div>
<% @warehouses.each do |w| %>
  <div>
    <h3><%= link_to(w.name, warehouse_path(w.id)) %></h3>
    <dl>
      <dt>Código:</dt>
      <dd><%= w.code %></dd>
      <dt>Local:</dt>
      <dd><%= w.city %>/<%= w.state %></dd>
      <dt>Área:</dt>
      <dd><%= number_with_delimiter(w.area, delimiter: '.') %> m²</dd>
    </dl>  
  </div>
<% end %>

<% if @warehouses.empty? %>
  <p>Não existem galpões cadastrados.</p>
<% end %>