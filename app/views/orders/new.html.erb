<h1 class="my-3">Novo <%= Order.model_name.human %></h1>

<% if(@order.errors.any?) %>
  <div class="alert alert-danger" role="alert">
    <p>Verifique os erros abaixo:</p>
    <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @order) do |f| %>
  <div class="d-grid gap-2 col-4 mb-3">
    <%= f.label :warehouse_id, class: "form-label fw-semibold" %>
    <%= f.collection_select :warehouse_id, @warehouses, :id, :warehouse_full_description, prompt: true %>
  </div>
  <div class="d-grid gap-2 col-4 mb-3">
    <%= f.label :supplier_id, class: "form-label fw-semibold" %>
    <%= f.collection_select :supplier_id, @suppliers, :id, :supplier_full_description, prompt: true %>
  </div>
  <div class="d-grid gap-2 col-4 mb-3">
    <%= f.label :estimated_delivery_date, class: "form-label fw-semibold" %>
    <%= f.date_field :estimated_delivery_date, class: "form-control" %>
  </div>
  <div class="d-grid gap-2 col-4 mb-3">
    <%= f.submit class: "btn btn-dark" %>
  </div>
<% end %>