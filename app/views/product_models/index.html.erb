<h1 class="my-3"><%= ProductModel.model_name.human count: 2 %></h1>

<div class="my-3">
  <%= link_to 'Cadastrar Modelo de Produto', new_product_model_path, class: "btn btn-outline-dark " %>
</div>

<% if @product_models.any? %>
  <table class="table">
    <thead>
      <tr>
        <th scope="col"><%= ProductModel.human_attribute_name(:name) %></th>
        <th scope="col"><%= ProductModel.human_attribute_name(:sku) %></th>
        <th scope="col"><%= ProductModel.human_attribute_name(:supplier) %></th>
      </tr>
    </thead>
    <tbody>
      <% @product_models.each do |pm| %>
        <tr>
          <td><%= link_to pm.name, pm, class: "link-dark" %></td>
          <td><%= pm.sku %></td>
          <td><%= link_to pm.supplier.brand_name, supplier_path(pm.supplier), class: "link-dark" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-secondary text-center" role="alert">
    NÃ£o existem produtos cadastrados.
  </div>
<% end %>



