<%= form_with(model: @warehouse) do |f| %>
  <div class="mb-3">
    <%= f.label :name, class: "form-label fw-semibold" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
    <div class="mb-3">
    <%= f.label :description, class: "form-label fw-semibold" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="row mb-3">
    <div class="col">
      <%= f.label :code, class: "form-label fw-semibold" %>
      <%= f.text_field :code, class: "form-control" %>
    </div>
    <div class="col">
      <%= f.label :area, class: "form-label fw-semibold" %>
      <%= f.number_field :area, class: "form-control", placeholder: 'área em m²' %>
    </div>
  </div>
  <div class="mb-3">
    <%= f.label :address, class: "form-label fw-semibold" %>
    <%= f.text_field :address, class: "form-control" %>
  </div>
  <div class="row mb-3">
    <div class="col">
      <%= f.label :city, class: "form-label fw-semibold" %>
      <%= f.text_field :city, class: "form-control" %>
    </div>
    <div class="col">
      <%= f.label :state, class: "form-label fw-semibold" %>
      <%= f.text_field :state, class: "form-control" %>
    </div>
    <div class="col">
      <%= f.label :postal_code, class: "form-label fw-semibold" %>
      <%= f.text_field :postal_code, class: "form-control", placeholder: '00000-000', maxlength: 9 %>
    </div>
  </div>
  <div class="d-grid gap-2 col-4 mb-3">
    <%= f.submit class: "btn btn-dark" %>
  </div>
<% end %>