<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <%= link_to t(:warehouses_and_storage), root_path, class: 'navbar-brand' %>
    
    <% if user_signed_in? %>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <%= link_to Supplier.model_name.human(count: 2), suppliers_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to t(:product, count: 2), product_models_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to Order.model_name.human(count: 2), orders_path, class: 'nav-link' %>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= current_user.name %>
            </a>
            <ul class="dropdown-menu dropdown-menu-lg-end">
              <%= button_to t(:logout), destroy_user_session_path, method: :delete, class: "dropdown-item" %>
           </ul>
          </li>
        </ul>
        <ul class="navbar-nav">
          <li>
            <%= form_with(url: search_orders_path, method: :get, class: 'd-flex') do |f| %>
              <%= f.text_field :query, placeholder: "#{ t(:search) } #{ Order.model_name.human }", class: "form-control me-2" %>
              <%= f.submit t(:search), class: "btn btn-dark" %>
            <% end %>
          </li>
        </ul>
      </div>
    <% else %>
      <ul class="navbar-nav">
        <%= link_to t(:sign_in),  new_user_session_path, class: "btn btn-outline-dark" %>
      </ul>
    <% end %>
  </div>
</nav>