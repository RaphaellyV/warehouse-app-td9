<%= form_with(model: @supplier) do |f| %>
  <div class="mb-3">
    <%= f.label :brand_name, class: "form-label fw-semibold" %>
    <%= f.text_field :brand_name, class: "form-control" %>
  </div>
    <div class="mb-3">
    <%= f.label :corporate_name, class: "form-label fw-semibold" %>
    <%= f.text_field :corporate_name, class: "form-control" %>
  </div>
  <div class="mb-3">
      <%= f.label :registration_number, class: "form-label fw-semibold" %>
      <%= f.text_field :registration_number, class: "form-control", placeholder: '00000000000000' %>
  </div>
  <div class="mb-3">
      <%= f.label :full_address, class: "form-label fw-semibold" %>
      <%= f.text_field :full_address, class: "form-control" %>
  </div>
  <div class="row mb-3">
    <div class="col">
      <%= f.label :city, class: "form-label fw-semibold" %>
      <%= f.text_field :city, class: "form-control" %>
    </div>
    <div class="col">
      <%= f.label :state, class: "form-label fw-semibold" %>
      <%= f.text_field :state, class: "form-control" %>
    </div>
    <div class="col">
      <%= f.label :postal_code, class: "form-label fw-semibold" %>
      <%= f.text_field :postal_code, class: "form-control", placeholder: '00000-000' %>
    </div>
  </div>
  <div class="mb-3">
    <%= f.label :email, class: "form-label fw-semibold" %>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :phone_number, class: "form-label fw-semibold" %>
    <%= f.text_field :phone_number, class: "form-control" %>
  </div>
  <div class="d-grid gap-2 col-4 mb-3">
    <%= f.submit class: "btn btn-dark" %>
  </div>
<% end %>